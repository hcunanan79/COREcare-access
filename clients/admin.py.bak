from django.db import models
from django.contrib import admin
from .models import Client

# --- Inlines (only load if they exist) ---

try:
    from assessments.models import CareAssessment

    class CareAssessmentInline(admin.StackedInline):
        model = CareAssessment
        extra = 0
except Exception:
    CareAssessmentInline = None


try:
    from careplans.models import CarePlan

    class CarePlanInline(admin.TabularInline):
        model = CarePlan
        extra = 0
except Exception:
    CarePlanInline = None


@admin.register(Client)
class ClientAdmin(admin.ModelAdmin):
    list_display = ("first_name", "last_name", "phone", "email")
    search_fields = ("first_name", "last_name", "phone", "email")

    fields = (
        "first_name",
        "last_name",
        "phone",
        "email",
        "address_line1",
        "city",
        "state",
        "zip_code",
    )

    inlines = [x for x in [CareAssessmentInline, CarePlanInline] if x is not None]


    # Patient profile
    first_name = models.CharField(max_length=100)
    last_name = models.CharField(max_length=100)

    phone = models.CharField(max_length=30, blank=True, null=True)
    email = models.EmailField(blank=True, null=True)

    address_line1 = models.CharField(max_length=255, blank=True, null=True)
    city = models.CharField(max_length=80, blank=True, null=True)
    state = models.CharField(max_length=40, blank=True, null=True)
    zip_code = models.CharField(max_length=20, blank=True, null=True)

    notes = models.TextField(blank=True, null=True)

    created_at = models.DateTimeField(auto_now_add=True)

    def __str__(self):
        return f"{self.first_name} {self.last_name}"

    def full_address(self):
        parts = [self.address_line1, self.city, self.state, self.zip_code]
        return ", ".join([p for p in parts if p])
