<!doctype html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{ client }}</title>
  <style>
    body { margin:0; font-family: Arial, sans-serif; }
    .topbar { padding:14px 16px; background:#2fa7a6; color:white; font-size:22px; font-weight:700; }
    .mapwrap { width:100%; height:260px; }
    .card { padding:16px; border-top:1px solid #e6e6e6; }
    .label { font-size:20px; font-weight:700; margin-bottom:6px; }
    .sub { font-size:18px; line-height:1.35; }
    .btn { display:inline-block; margin-top:10px; padding:12px 14px; border-radius:8px;
           background:#2fa7a6; color:white; text-decoration:none; font-weight:700; }
    .muted { color:#777; }
  </style>
</head>
<body>
  <div class="topbar">{{ client }}</div>

  <!-- Map preview (no API key needed) -->
  <div class="mapwrap">
    <iframe
      width="100%" height="260" frameborder="0" style="border:0"
      referrerpolicy="no-referrer-when-downgrade"
      src="https://www.google.com/maps?q={{ client.full_address|urlencode }}&output=embed"
      allowfullscreen>
    </iframe>
  </div>

  <div class="card">
    <div class="label">{{ client.first_name }}’s Home</div>
    <div class="sub">{{ client.full_address }}</div>

    <!-- Navigate buttons -->
    <a class="btn" href="{{ client.apple_maps_directions_url }}" target="_blank">Navigate (Apple Maps)</a>
    <a class="btn" href="{{ client.google_maps_directions_url }}" target="_blank" style="margin-left:8px;">Navigate (Google Maps)</a>
  </div>

  <div class="card">
    <div class="label">{{ client.first_name }}’s Home Phone</div>
    {% if client.phone %}
      <div class="sub"><a href="tel:{{ client.phone }}">{{ client.phone }}</a></div>
    {% else %}
      <div class="sub muted">No phone on file</div>
    {% endif %}
  </div>
</body>
</html>
